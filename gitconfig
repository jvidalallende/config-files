[alias]
    co = checkout
    lh = log -n15 --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an] --decorate
    lhl = log -n35 --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an] --decorate
    lhll = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an] --decorate
    ll = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an] --decorate --numstat
    ls = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an] --decorate
    pro = pull --rebase origin
    prom = pull --rebase origin master
    st = status

[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.gitignore_global
    pager = less -r
    ui = auto
