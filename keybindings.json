// Place your key bindings in this file to override the defaults
[
    { "key": "alt+l",  "command": "workbench.action.terminal.focus" },
    { "key": "alt+l",  "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"},
    { "key": "win+l", "command": "workbench.action.closePanel"},
    // This one toggles maximize of terminal window
    { "key": "alt+m",  "command": "workbench.action.toggleMaximizedPanel", "when": "terminalFocus"},
    // Focus editor from anywhere in VSCode
    // Useful when some missing keystroke moves focus out of editor
    {
        "key": "alt+0",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {
        "key": "ctrl+p",
        "command": "-extension.vim_ctrl+p",
        "when": "editorTextFocus && vim.active && vim.use<C-p> && !inDebugRepl || vim.active && vim.use<C-p> && !inDebugRepl && vim.mode == 'CommandlineInProgress' || vim.active && vim.use<C-p> && !inDebugRepl && vim.mode == 'SearchInProgressMode'"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-extension.vim_ctrl+pagedown",
        "when": "editorTextFocus && vim.active && vim.use<C-pagedown> && !inDebugRepl"
    }
]
